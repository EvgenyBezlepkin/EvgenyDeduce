<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="deduction.db.mappers.RulesMapper">

    <insert id="insertRulesDB" parameterType="deduction.db.dto.RulesDTO" useGeneratedKeys="true" keyColumn="id" keyProperty="id" >
        INSERT INTO rules (result_fact, model_id) VALUES(#{result_fact}, #{model_id})
    </insert>

    <select id="getRules" parameterType="java.lang.String" resultType="deduction.db.dto.RulesDTO">
        SELECT rules.id, result_fact FROM rules join model on rules.model_id=model.id where model.name = #{name}
    </select>

    <delete id="deleteRules" parameterType="int">
        DELETE FROM rules WHERE id=#{id}
    </delete>

</mapper>
