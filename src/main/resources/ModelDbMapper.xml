<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="deduction.dto.ModelDTOMapper">

    <insert id="insertNameInModel" parameterType="java.lang.String">
      INSERT INTO model (name) VALUES(#{name})
    </insert>

    <select id="getModelIdByName" parameterType="java.lang.String" resultType="java.lang.Integer">
        select id from model where name=#{name}
    </select>

    <delete id="deleteModel" parameterType="java.lang.String">
        DELETE FROM model WHERE name=#{name}
    </delete>

</mapper>
